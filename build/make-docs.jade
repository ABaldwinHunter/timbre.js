doctype 5
html(lang=lang)
  head
    meta(charset="utf-8")
    title #{title}
    link(rel="stylesheet", href="../../misc/bootstrap.min.css", type="text/css")
    link(rel="stylesheet", href="../../misc/prettify.css" , type="text/css")
    link(rel="stylesheet", href="../../misc/docs-main.css", type="text/css")
    link(rel="shortcut icon", href="/favicon.ico")
    script(src="../../timbre.dev.js")    
  body
    .container
      .row
        #index.span2
          h1 timbre.js
          for items in categories
            if indexes[items.key].length
              h2 #{items.caption}
              ul
                each name in indexes[items.key]
                  li
                    a(href=name + ".html") #{name}
        #doc.span9
          !{doc}
    script(src="../../misc/jquery.min.js")
    script(src="../../misc/prettify.js")
    script(src="../../misc/docs-main.js")
